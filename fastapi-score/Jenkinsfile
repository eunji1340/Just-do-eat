pipeline {
    agent any

    environment {
        CONTAINER_NAME = 'JDE-ai'
        SERVICE_NAME = 'ai'
        COMPOSE_FILE = '/home/ubuntu/projects/S13P31A701/back/docker-compose.yml'
    }

    stages {
        stage('üì¶ Checkout') {
            steps {
                echo "==== Pulling latest AI branch ===="
                checkout scm
            }
        }

        stage('üê≥ Ensure Network') {
            steps {
                echo "==== Checking docker network ===="
                sh 'docker network inspect JDE-network >/dev/null 2>&1 || docker network create JDE-network'
            }
        }

        stage('üêç Build FastAPI Image') {
            steps {
                echo "==== Building FastAPI Docker image ===="
                sh 'docker compose -f ${COMPOSE_FILE} build ${SERVICE_NAME}'
            }
        }

        stage('üßπ Stop Old Container') {
            steps {
                echo "==== Stopping old FastAPI container (if exists) ===="
                sh 'docker stop ${CONTAINER_NAME} || true && docker rm ${CONTAINER_NAME} || true'
            }
        }

        stage('üöÄ Run New FastAPI Container') {
            steps {
                echo "==== Running new FastAPI container ===="
                sh 'docker compose -f ${COMPOSE_FILE} up -d ${SERVICE_NAME}'
            }
        }

        stage('‚úÖ Health Check') {
            steps {
                echo "==== Checking FastAPI Health ===="
                sh '''
                    sleep 5
                    curl -f http://localhost:8000/docs || echo "‚ö†Ô∏è FastAPI not responding yet"
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ FastAPI Î∞∞Ìè¨ ÏôÑÎ£å!"
        }
        failure {
            echo "‚ùå FastAPI Î∞∞Ìè¨ Ïã§Ìå®!"
        }
    }
}
